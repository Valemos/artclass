<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/StudentElement"
    android:layout_width="match_parent"
    android:layout_height="@dimen/small_list_item_height"
    android:layout_margin="0dp"
    android:orientation="horizontal"
    app:layout_constraintHorizontal_chainStyle="spread_inside">


    <TextView
        android:id="@+id/name_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="10"
        android:background="@android:color/background_light"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:longClickable="true"
        android:maxEms="20"
        android:singleLine="true"
        android:textSize="@dimen/default_text_size" />

    <TextView
        android:id="@+id/hours_left_view"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="@dimen/default_text_size" />

    <TextView
        android:id="@+id/hours_worked_view"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/minus_hour_btn"
            android:layout_width="@dimen/increment_button_size"
            android:layout_height="@dimen/increment_button_size"
            android:background="@drawable/ic_minus_sign"
            android:backgroundTint="@color/color_StateOne"
            android:longClickable="true" />

        <ImageButton
            android:id="@+id/plus_hour_btn"
            android:layout_width="@dimen/increment_button_size"
            android:layout_height="@dimen/increment_button_size"
            android:background="@drawable/ic_add_square"
            android:backgroundTint="@color/color_StateTwo"
            android:longClickable="true" />
    </LinearLayout>

</LinearLayout>